<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context="br.com.uol.pslibs.lojinhapagseguro.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cd_installment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_margin="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/tv_parcelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parcelas"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:textColor="#444"
                android:fontFamily="sans-serif"/>

            <Spinner
                android:id="@+id/sp_installments"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/tv_parcelas"
                android:layout_marginLeft="20dp" />

            <TextView
                android:id="@+id/tv_value"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="18sp"
                android:textColor="#444"
                android:fontFamily="sans-serif"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/bt_parcel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:enabled="true"
        android:text="Confirmar Parcelas"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_selector"/>

</RelativeLayout>
